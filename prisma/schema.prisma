generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Topic {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  title           String 
  description     String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
